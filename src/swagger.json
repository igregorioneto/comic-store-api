{
    "openapi": "3.0.0",
    "info": {
        "title": "Comic Store API",
        "description": "This API is intended for a comic book store.",
        "version": "1.0.0"
    },
    "servers": [{
        "url": "http://localhost:3000",
        "description": "API de test"
    }],
    "paths": {
        "/authenticate": {
            "post": {
                "summary": "Login user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "post": {
                "summary": "Create user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Listing of users",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "summary": "Searching for specific user",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a user",
                "tags": ["Users"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a user",
                "tags": ["Users"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            }
                        }
                    }
                }
            }
        },
        "/categories": {
            "get": {
                "summary": "Category listing",
                "tags": ["Categories"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#components/schemas/Category"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a category",
                "description": "Listagem dos usu√°rios|Listado de usuarios",
                "tags": ["Categories"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Category"
                            }
                        }
                    }
                }
            }
        },
        "/comics": {
            "get": {
                "summary": "Listing comics",
                "tags": ["Comics"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#components/schemas/Comic"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Registering a new comic",
                "tags": ["Comics"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Comic"
                            }
                        }
                    }
                }
            }
        },
        "/stores": {
            "get": {
                "summary": "Listing purchase information",
                "tags": ["Stores"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#components/schemas/Comic"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Make a purchase",
                "description": "It is not necessary for the user ID as the application recognizes the logged in user.",
                "tags": ["Stores"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "array",
                                "items": {
                                    "$ref": "#components/schemas/Store"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "Category": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Comic": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number"
                    },
                    "category": {
                        "type": "string"
                    }
                }
            },
            "Store": {
                "type": "object",
                "properties": {
                    "comic": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}